@model LibraryManagement.Models.CheckoutModels.CheckoutModel

@{
    ViewBag.Title = @Model.Title;
}
<div class="container content">
    <div class="header clearfix detailHeading">
        <h3 class="text-muted">Place Hold on Library Item</h3>
        <hr />
        <div class="jumbotron">
            <div class="row">
                <div class="col-md-3">
                    <div>
                        <p id="itemTitle">@Model.Title</p>
                        <img class="detailImage" src="@Model.ImageUrl" />
                    </div>
                </div>
                <div class="col-md-9">
                    <p>There are currently @Model.HoldCount holds in the queue for this item.</p>
                    <form asp-action="PlaceHold">
                        <input type="hidden" asp-for="AssetId" />
                        <div class="form-group col-md-5">
                            Please insert a Library Card ID.
                            <div class="input-group-sm mt-1">
                                <input asp-for="LibraryCardId" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <input type="submit" value="Place Hold" class="btn btn-warning btn-sm" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>