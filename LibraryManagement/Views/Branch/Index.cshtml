@model LibraryManagement.Models.Branch.BranchIndexModel
@{
    ViewData["Title"] = "Branch Index";
}
<div class="container content">
    <h3>@ViewData["Title"]</h3>
    <div class="">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Branch Name</th>
                    <th>Add Patron or Asset</th>
                    <th>Number Of Assets</th>
                    <th>Number Of Patrons</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var branch in Model.Branches)
                {
                    <tr>
                        <td>
                            @branch.Name
                        </td>
                        <td>
                            <a asp-action="AddPatron" asp-controller="Branch" asp-route-id="@branch.Id" class="text-info px-2">
                                <i class="fas fa-book-reader" data-toggle="tooltip" data-placement="top" title="Add a Patron"></i>
                            </a>
                            <a asp-action="AddAsset" asp-controller="Branch" asp-route-id="@branch.Id" class="text-success px-2">
                                <i class="fas fa-book" data-toggle="tooltip" data-placement="top" title="Add an Assent"></i>
                            </a>
                        </td>
                        <td>
                            @branch.NumberOfAssets
                        </td>
                        <td>
                            @branch.NumberOfPatrons
                        </td>
                        <td class="d-flex justify-content-end">
                            <a asp-action="Detail" asp-controller="Branch" asp-route-id="@branch.Id" class="text-info px-2">
                                <i class="fas fa-search"data-toggle="tooltip" data-placement="top" title="Detail"></i>
                            </a>
                            <a asp-action="Edit" asp-controller="Branch" asp-route-id="@branch.Id" class="text-success px-2">
                                <i class="fas fa-edit" data-toggle="tooltip" data-placement="top" title="Edit"></i>
                            </a>
                            <a asp-action="Delete" asp-controller="Branch" asp-route-id="@branch.Id" class="text-danger px-2">
                                <i class="fas fa-trash-alt" data-toggle="tooltip" data-placement="top" title="Remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

