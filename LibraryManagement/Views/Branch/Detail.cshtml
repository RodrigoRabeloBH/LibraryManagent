
@model LibraryManagement.Models.Branch.BranchDetailModel
@{
    ViewBag.Title = @Model.Name + " Branch";
}

<div class="container content">
    <h3>Branch Information</h3>
    <hr />
    <div class="jumbotron">
        <div class="row">
            <img src="~/Images/branches/@Model.ImageUrl" class="detailImageBrach" />
        </div>
        <div class="row mt-4">
            <div class="col-md-8">
                <div>
                    <h2>@Model.Name</h2>
                    <div">
                        <p class="text-muted">Address: @Model.Address</p>
                        <p class="text-muted">Telephone: @Model.Telephone</p>
                </div>
                <div>
                    <p class="text-muted">@Model.Description</p>
                </div>
            </div>
            <div class="col-md-4">
                <table class="table">
                    <tr>
                        <td>Date Opened: </td>
                        <td>@Model.OpenedDate.ToString("dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <td>Number Of Patrons: </td>
                        <td>@Model.NumberOfPatrons</td>
                    </tr>
                    <tr>
                        <td>Number of Assets: </td>
                        <td>@Model.NumberOfAssets</td>
                    </tr>
                    <tr>
                        <td>Value of Assets: </td>
                        <td>$@Model.TotalAssetsValue</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div id="space"></div>   
</div>
